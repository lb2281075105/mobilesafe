<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
         style="@style/TitleStyle"
         android:text="手机防盗"/>

     <RelativeLayout
         android:layout_marginTop="10dp"
         android:padding="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <TextView
              android:textColor="#000"
              android:id="@+id/tv_safe_number"
              android:text="安全号码"
              android:textSize="18sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:textColor="#000"
              android:textSize="18sp"
              android:id="@+id/tv_phone"
              android:layout_alignParentRight="true"
              android:text="18000000"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <ImageView
              android:layout_marginTop="10dp"
              android:layout_below="@id/tv_safe_number"
              android:background="@drawable/listview_divider"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
     </RelativeLayout>
     <RelativeLayout
         android:gravity="center_vertical"
         android:padding="5dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
          <TextView
              android:textColor="#000"
              android:textSize="18sp"
              android:id="@+id/tv_fangdao"
              android:text="防盗保护是否开启"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

          <ImageView
              android:id="@+id/iv_lock"
              android:layout_alignParentRight="true"
              android:src="@drawable/lock"
              android:layout_width="25dp"
              android:layout_height="25dp"/>

          <ImageView
              android:layout_below="@id/tv_fangdao"
              android:layout_marginTop="10dp"
              android:background="@drawable/listview_divider"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
     </RelativeLayout>

     <TextView
         android:id="@+id/tv_reset_bg"
         android:textSize="18sp"
         android:textColor="#000"
         android:background="@drawable/selector_reset_setup_bg"
         android:text="重新进入设置向导"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <TextView
         android:padding="5dp"
         android:textSize="18sp"
         android:textColor="#000"
         android:background="#ccc"
         android:text="功能简介"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

     <TextView
         android:gravity="center_vertical"
         android:textSize="18sp"
         android:textColor="#000"
         android:drawableLeft="@android:drawable/star_big_on"
         android:text="GPS追踪:#*location*#"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <TextView
         android:gravity="center_vertical"
         android:textSize="18sp"
         android:textColor="#000"
         android:drawableLeft="@android:drawable/star_big_on"
         android:text="播放报警音乐:#*alarm*#"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <TextView
         android:gravity="center_vertical"
         android:textSize="18sp"
         android:textColor="#000"
         android:drawableLeft="@android:drawable/star_big_on"
         android:text="数据销毁:#*wipedata*#"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <TextView
         android:gravity="center_vertical"
         android:textSize="18sp"
         android:textColor="#000"
         android:drawableLeft="@android:drawable/star_big_on"
         android:text="远程锁屏:#*lockscreen*#"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
</LinearLayout>